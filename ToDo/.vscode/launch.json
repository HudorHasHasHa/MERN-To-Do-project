{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/app.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "runtimeArgs": ["--inspect=9229"],
        "env": {
          "NODE_ENV": "development",
          "PORT": 3000
        },
        "outputCapture": "std",
        "timeout": 5000
      }
    ]
  }
  